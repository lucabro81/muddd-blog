---
import PageLink from "./PageLink.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

const { currentLocale } = Astro;
---

<div is-="horizontal-menu">
  <hr />
  <ul>
    <li>
      <PageLink href={getRelativeLocaleUrl(currentLocale ?? 'it', "")}>Home</PageLink>
    </li>
    <li>
      <PageLink href={getRelativeLocaleUrl(currentLocale ?? 'it', 'il-progetto')}>Il Progetto</PageLink>
    </li>
    <li>
      <PageLink href={getRelativeLocaleUrl(currentLocale ?? 'it', 'milestones')}>Milestones</PageLink>
    </li>
    <li is-="right-end">
      <ul>
        <li>
          <PageLink href={getRelativeLocaleUrl(currentLocale ?? 'it', 'ai-disclaimer')}>AI Disclaimer</PageLink>
        </li>
      </ul>
    </li>

  </ul>
  <hr />
</div>

<style>
  @layer base {
    div[is-~="horizontal-menu"] ul {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      gap: 1rem;
      padding: 0.125rem 0;
    }
    div[is-~="horizontal-menu"] ul li {
      gap: 0;
      margin: 0;
      padding: 0;
    }
  }
  @layer components {
    ul li:before {
      content: "/";
      margin-right: 0;
    }
    ul li[is-~="right-end"]:before {
      content: "";
      margin: 0;
    }
    li[is-~="right-end"] {
      margin-left: auto;
    }
  }

  @media (max-width: 768px) {
    div[is-~="horizontal-menu"] {
      display: none;
    }
  }
</style>